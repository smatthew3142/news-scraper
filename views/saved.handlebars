
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron jumbotron-fluid" style="height:200px;">
        <div class="container">
          <h1 class="display-5">Saved Articles</h1>
        </div>
    </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{#each articles}}
        <div class="card">
          <div class="card-body">
            <div class="card-title row">
              <h3 class="panel-title pull-left"><a href={{this.link}} target="_blank">{{this.title}}</a></h3>
            </div>
            <div class="card-text row">
              <p>{{this.summary}}</p>
              <div class="row">
                <button id="modalbutton" type="submit" class="btn btn-outline-primary" data-toggle="modal" data-id={{this.id}} data-target="#myModal" style="margin-left:20px;">View Comments</button>
                <form action="/remove/{{this.id}}">
                  <button type="submit" style="margin-left:5px;"class="btn btn-outline-primary">Remove from SAVED</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>



<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Article: <span id="articleId"></span></h4>
        <button type="button" class="close" data-dismiss="modal" style="color:white;" aria-label="Close"><span aria-hidden="true">&times;</span></button>

      </div>
      <div class="modal-body">
        <div id="comments"></div>
      </div>
 
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

<script src="./assets/js/saved.js"></script>